{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "predeploy": [
      "yarn prepareprod && yarn --cwd functions install && yarn install && yarn build"
    ]
  },
  "hosting": {
    "predeploy": [
      "cp functions/nuxt/* public/nuxt/ && cp -a src/static/. public/"
    ],
    "public": "public/",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
            {
              "source": "**",
              "function": "cstapp"
            }
    ]
  }
}
